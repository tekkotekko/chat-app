  <div class="message">
    <ul class="message-name-date">
      <li class="name"><%= message.user.name %></li>
      <li class="date"><%= l message.created_at %></li>
    </ul>
    <div class="message-text">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: "500x500"), class: "message-image" if message.image.attached? %>
  </div>